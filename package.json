{
  "name": "youanno",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:letscode-io/youanno.git",
  "author": "Let's Code <https://github.com/letscode-io>",
  "license": "MIT",
  "scripts": {
    "build:inject": "parcel build src/inject/index.js --out-file inject --no-content-hash",
    "build:popup": "parcel build src/page_action/page_action.html --out-file page_action.html --no-content-hash --public-url '.'",
    "build": "yarn build:popup & yarn build:inject",
    "dev:inject": "parcel src/inject/index.js --no-hmr --out-file inject --no-source-maps",
    "dev:popup": "parcel src/page_action/page_action.html --no-hmr --out-file page_action.html --no-source-maps --public-url '.'",
    "dev": "yarn dev:popup & yarn dev:inject",
    "lint-fix": "prettier --write src/",
    "lint": "prettier --check src/",
    "test:watch": "yarn test --watch",
    "test": "jest src"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@testing-library/jest-dom": "^5.10.0",
    "@testing-library/svelte": "^3.0.0",
    "babel-jest": "^26.0.1",
    "dotenv": "^8.2.0",
    "jest": "^26.0.1",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-svelte": "^4.0.6",
    "postcss-modules": "^2.0.0",
    "prettier": "2.0.5",
    "svelte": "^3.23.0",
    "svelte-jester": "^1.0.6",
    "tailwindcss": "^1.4.6"
  },
  "browserslist": [
    "last 2 Chrome versions"
  ],
  "svelte": {
    "compiler": {
      "css": false
    }
  },
  "babel": {
    "plugins": [
      "@babel/plugin-transform-runtime"
    ],
    "presets": [
      "@babel/env"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.svelte$": "svelte-jester"
    },
    "moduleFileExtensions": [
      "js",
      "svelte"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ],
    "setupFiles": [
      "<rootDir>/testSetup.js"
    ]
  }
}
